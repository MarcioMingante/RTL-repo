{
  "extends": "@trybe/eslint-config-frontend/typescript",
  "overrides": [
    {
      "files": [
        "src/tests/**/*.tsx"
      ],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 90,
            "ignoreComments": true,
            "ignoreUrls": true,
            "ignoreRegExpLiterals": true,
            "ignoreStrings": true
          }
        ],
        "max-lines": [
          "off"
        ],
        "no-magic-numbers": [
          "off"
        ]
      }
    }
  ]
}